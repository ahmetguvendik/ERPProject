@using System.Security.Claims
@using Newtonsoft.Json
@model DTO.LeaveRequestDto.CreateLeaveRequestDto

@{
    Layout = null;
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessages = TempData["ErrorMessages"] != null
        ? JsonConvert.DeserializeObject<List<string>>(TempData["ErrorMessages"].ToString())
        : null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Solvix Personel Ekle</title>
    <link href="startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet" />
    <link href="startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gradient-primary d-flex align-items-center min-vh-100">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="card shadow-lg border-0 my-5">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="text-gray-900 font-weight-bold">Personel Ekle</h2>
                        </div>

                        <form asp-action="Index" asp-controller="CreateLeaveRequest" method="post">
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="StartDate"></label>
                                    <input class="form-control" asp-for="StartDate" placeholder="Izin Baslangic Tarihini Giriniz" />
                                </div>
                                
                                <div class="form-group col-md-6">
                                    <label asp-for="EndDate"></label>
                                    <input class="form-control" asp-for="EndDate" placeholder="Izin Bitis Tarihini Giriniz" />
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="RequestType"></label>
                                    @Html.DropDownListFor(model => model.RequestType, (List<SelectListItem>)ViewBag.RequestTypes, "Izin Turunu Seçiniz", new { @class = "form-control" })
                                </div>

                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-success btn-lg btn-block font-weight-bold">
                                    Onaya Gonder
                                </button>
                            </div>
                            
                            <div id="leaveQuotaContainer">
                                <!-- İzin bilgisi buraya yüklenecek -->
                            </div>

                            <div id="leaveQuotaContainer"></div>

                            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                            <script>
    $(document).ready(function () {
        var userId = '@User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier)';
        if(userId){
            $.ajax({
                url: '@Url.Action("GetLeaveQuotaPartial", "CreateLeaveRequest")',
                data: { userId: userId },
                type: 'GET',
                success: function (result) {
                    $('#leaveQuotaContainer').html(result);
                },
                error: function () {
                    $('#leaveQuotaContainer').html('<p>İzin bilgisi yüklenirken hata oluştu.</p>');
                }
            });
        } else {
            $('#leaveQuotaContainer').html('<p>Kullanıcı bulunamadı.</p>');
        }
    });
</script>


                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>



<!-- JS -->
    <script src="startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: '@successMessage',
                confirmButtonColor: '#3085d6',
                confirmButtonText: 'Tamam'
            });
        </script>
    }
    else if (errorMessages != null && errorMessages.Count > 0)
    {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Hata!',
                html: '@Html.Raw(string.Join("<br/>", errorMessages))',
                confirmButtonColor: '#d33',
                confirmButtonText: 'Tamam'
            });
        </script>
    }
</body>
</html>

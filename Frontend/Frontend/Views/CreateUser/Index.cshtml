@using Newtonsoft.Json
@model DTO.AppUserDto.CreateUserDto

@{
    Layout = null;
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessages = TempData["ErrorMessages"] != null
        ? JsonConvert.DeserializeObject<List<string>>(TempData["ErrorMessages"].ToString())
        : null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Solvix Personel Ekle</title>
    <link href="startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gradient-primary d-flex align-items-center min-vh-100">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-lg border-0 my-5">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="text-gray-900 font-weight-bold">Personel Ekle</h2>
                    </div>

                    <form asp-action="Index" asp-controller="CreateUser" method="post">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label asp-for="TCNo"></label>
                                <input class="form-control" asp-for="TCNo" placeholder="TC giriniz" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="UserName"></label>
                                <input class="form-control" asp-for="UserName" placeholder="Kullanıcı adı" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" asp-for="FirstName" placeholder="Ad giriniz" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="LastName"></label>
                                <input class="form-control" asp-for="LastName" placeholder="Soyad giriniz" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Email"></label>
                                <input class="form-control" asp-for="Email" placeholder="Email giriniz" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="PhoneNumber"></label>
                                <input class="form-control" asp-for="PhoneNumber" placeholder="Telefon" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Gender"></label>
                                <input class="form-control" asp-for="Gender" placeholder="Cinsiyet" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="BirthDate"></label>
                                <input type="date" class="form-control" asp-for="BirthDate" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="StartingJob"></label>
                                <input type="date" class="form-control" asp-for="StartingJob" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="DepartmanId">Departman</label>
                                @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.Departmans, "Seçiniz", new {@class="form-control"})
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="JobTitle"></label>
                                <input class="form-control" asp-for="JobTitle" placeholder="Görev" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="JobTypeId">Çalışma Tipi</label>
                                @Html.DropDownListFor(x => x.JobTypeId, (List<SelectListItem>)ViewBag.JobTypes, "Seçiniz", new {@class="form-control"})
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="SicilNo"></label>
                                <input class="form-control" asp-for="SicilNo" placeholder="Sicil No" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="BrutSalary"></label>
                                <input class="form-control" asp-for="BrutSalary" placeholder="Brüt Maaş" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="NetSalary"></label>
                                <input class="form-control" asp-for="NetSalary" placeholder="Net Maaş" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Iban"></label>
                                <input class="form-control" asp-for="Iban" placeholder="IBAN" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Prim"></label>
                                <input class="form-control" asp-for="Prim" placeholder="Prim (varsa)" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Disruptions"></label>
                                <input class="form-control" asp-for="Disruptions" placeholder="Kesinti (varsa)" />
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Şifre belirleyin" />
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg btn-block font-weight-bold">
                                Kaydet
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- JS -->
<script src="startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>

@if (!string.IsNullOrEmpty(successMessage))
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Başarılı!',
            text: '@successMessage',
            confirmButtonColor: '#3085d6',
            confirmButtonText: 'Tamam'
        });
    </script>
}
else if (errorMessages != null && errorMessages.Count > 0)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            html: '@Html.Raw(string.Join("<br/>", errorMessages))',
            confirmButtonColor: '#d33',
            confirmButtonText: 'Tamam'
        });
    </script>
}
</body>
</html>

@model DTO.AppUserDto.LoginUserDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Giriş Yap</title>

    <!-- Stil dosyaları -->
    <link href="startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary d-flex align-items-center min-vh-100">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h4 text-gray-900 font-weight-bold">Hoş Geldiniz</h1>
                        <p class="text-muted">Devam etmek için lütfen giriş yapın</p>
                    </div>

                    <!-- Uyarı mesajları -->
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>Uyarı!</strong> @ViewBag.Message
                            <button type="button" class="close" data-dismiss="alert" aria-label="Kapat">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Hata!</strong> @ViewBag.Error
                            <button type="button" class="close" data-dismiss="alert" aria-label="Kapat">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-action="Index" asp-controller="Login" method="post" novalidate>
                        <div class="form-group">
                            <label asp-for="TcNo" class="font-weight-bold">TC Kimlik No</label>
                            <input asp-for="TcNo" class="form-control" placeholder="TC Kimlik Numaranızı giriniz">
                            <span asp-validation-for="TcNo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="font-weight-bold">Şifre</label>
                            <input asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block font-weight-bold">
                            <i class="fas fa-sign-in-alt mr-2"></i> Giriş Yap
                        </button>

                        <div class="text-center mt-3">
                            <a class="small text-primary" href="/Login/ResetPasswordEmail">Şifrenizi mi unuttunuz?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JS dosyaları -->
<script src="startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>

</body>
</html>

@model List<DTO.PurchaseRequestDto.GetPurchaseByUserIdDto>

@{
    Layout = "~/Views/DefaultStaff/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Satın Alma Talepleri</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

<div class="container my-5">
    <h2 class="mb-4 text-center">Satın Alma Talepleriniz</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Henüz satın alma talebiniz bulunmamaktadır.
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover table-striped">
            <thead class="table-primary">
            <tr>
                <th>Ürün/Hizmet Adı</th>
                <th>Miktar</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Talep Tarihi</th>
                <th>Aciliyet</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Reason</td>
                    <td>@item.Statues</td>
                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.UrgencyLevel.ToString()</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>